{
  "name": "be-task",
  "version": "1.0.0",
  "scripts": {
    "start": "ts-node -r tsconfig-paths/register ./src/main.ts",
    "start:dev": "nodemon --exec ts-node -r tsconfig-paths/register ./src/main.ts | pino-pretty",
    "test": "jest",
    "lint": "eslint \"{src,tests}/**/*.ts\"",
    "format": "prettier --write \"src/**/*.ts\"",
    "init-env": "cp dist.env .env"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@jest/globals": "^30.0.5",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "jest": "^30.0.5",
    "nodemon": "^3.1.10",
    "pino-pretty": "^13.1.1",
    "prettier": "^3.4.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  },
  "dependencies": {
    "pino": "^9.7.0"
  }
}
